@using Microsoft.AspNetCore.Identity
@model CoolShopFlowers.Models.ViewModels.UpdPasswordViewModel
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewBag.Title = "Change Password";
}

<head>
    <!-- Підключення Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<div class="container d-flex justify-content-center align-items-center min-vh-100">

    <div class="card shadow-lg" style="width: 100%; max-width: 500px; background-color: #4CAF50; color: white;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Change Password</h3>

            <form asp-action="ChangePassword">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="OldPassword" class="control-label">
                        <strong>Old Password</strong>
                    </label>
                    <input asp-for="OldPassword" type="password" class="form-control" placeholder="Enter your old password" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label">
                        <strong>New Password</strong>
                    </label>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter your new password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label">
                        <strong>Confirm New Password</strong>
                    </label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your new password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Change Password" class="btn btn-light btn-block mt-3" />
                </div>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success mt-3">
                        @TempData["Message"]
                    </div>
                }
            </form>
        </div>
    </div>

</div>

