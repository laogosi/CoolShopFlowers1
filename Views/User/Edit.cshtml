@using Microsoft.AspNetCore.Identity
@model CoolShopFlowers.Models.ViewModels.UpdUserViewModel
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Редагування користувача</title>

    <!-- Підключення Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJv3O4p1/ewzN6tXk3wA1q5bxnD5W8O/6tBO4Dk9l5BRiO3u85uDwnM3qF8v" crossorigin="anonymous">

    <style>
        /* Ваші стилі */
        .container1 {
            display: flex;
            justify-content: center; /* Center the content horizontally */
            align-items: center; /* Center the content vertically */
            min-height: 100vh; /* Set minimum height to the full viewport height */
        }

        .card {
            width: 50%; /* Adjust the card width as needed */
            margin: 20px;
            padding: 20px;
            background-color: rgba(0,0,0, 0.8);
            color: wheat;
        }

        .user-image {
            max-width: 50%;
            height: auto;
            border-radius: 50%; /* Make the image round */
        }

        .profile-info {
            margin-top: 20px;
        }

    </style>
</head>
<body>

    <div class="container min-vh-100 d-flex justify-content-center align-items-center">
        <div class="card w-50 shadow-lg" style="background-color: #e9f7e1;">
            <div class="card-body">
                <h5 class="card-title text-center text-success">Редагувати користувача</h5>
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="Id" type="hidden" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label text-success">
                            <strong>Ім'я</strong>
                        </label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="BirthDay" class="control-label text-success">
                            <strong>Дата народження</strong>
                        </label>
                        <input asp-for="BirthDay" type="date" class="form-control" />
                        <span asp-validation-for="BirthDay" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label for="Sex" class="text-success">
                            <strong>Стать</strong>
                        </label>
                        <select asp-for="Sex" class="form-control">
                            <option value="Male">Чоловіча</option>
                            <option value="Female">Жіноча</option>
                        </select>
                        <span asp-validation-for="Sex" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Зберегти" class="btn btn-success btn-block" />
                    </div>

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success mt-3">
                            @TempData["Message"]
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>

    <!-- Підключення Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9gybP+PzZt50dNIAzvD3QbWNjX9bsiZr9T3uN62Q6Sk7hV4g6G5" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0FFfFqYTxWnEoRrPp76Hj8PQp0Fq0Y9U9T3w7b3wJclzD/A5" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

</body>
</html>