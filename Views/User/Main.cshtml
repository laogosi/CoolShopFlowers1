@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@{
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Форум</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LAB1.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="container mt-4">
        <div class="row">
            <form class="main-box">
                <p></p>
                <p>@Localizer["Welcome"]</p>
                <img src="~/css/dark-souls-bonfire.gif" alt="Гіфка" class="img-fluid">
                <p></p>
            </form>
        </div>
    </div>

    <input type="hidden" name="captchaToken" id="captchaToken" />

    <script src="https://www.google.com/recaptcha/api.js?render=6LdYFVoqAAAAAEDaPOHD5swD9cntcCN7GvRcxo2z"></script>
    <script>
        grecaptcha.ready(function () {
            window.grecaptcha.execute('6LdYFVoqAAAAAEDaPOHD5swD9cntcCN7GvRcxo2z', { action: 'home' }).then(function (token) {
                document.getElementById('captchaToken').value = token;
            });
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
