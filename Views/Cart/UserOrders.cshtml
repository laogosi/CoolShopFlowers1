@model List<Order>

<h2>Your Orders</h2>

@if (!Model.Any())
{
    <p>You have no orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.CreateDate.ToString("g")</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>@order.OrderStatus?.StatusName</td>
                    <td>
                        <a href="@Url.Action("OrderDetails", "Cart", new { orderId = order.OrderId })" class="btn btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
